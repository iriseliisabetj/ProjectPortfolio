@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center d-flex align-items-center justify-content-center">
    <div>
        <h1 class="display-4 mb-4">TIC-TAC-TWO</h1>
        <form method="post">
            <div class="form-group">
                <button type="submit" asp-page-handler="NewGame" class="btn btn-primary btn-lg w-100 mb-3">New Game</button>
            </div>
            <div class="form-group">
                <button type="submit" asp-page-handler="PlayGame" class="btn btn-primary btn-lg w-100">Play Game</button>
            </div>
        </form>
    </div>
</div>
