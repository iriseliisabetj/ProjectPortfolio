@page
@model WebApp.Pages.Games.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Game</h1>

<h3>Are you sure you want to delete this game?</h3>
<div>
    <h4>Game Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameStateJson)
        </dt>
        <dd class="col-sm-10">
            <pre>@Html.DisplayFor(model => model.Game.GameStateJson)</pre>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Config)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Config.ConfigName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.ModifiedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.ModifiedAt)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>